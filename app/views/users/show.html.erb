<h1>ユーザー詳細</h1>
<% if @user.image.attached? %>
  <%= image_tag current_user.image.variant(resize:'200x200') %>
<% end %>
<%= @user.name %>
<section>
  <%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if logged_in? %>
<% @user.interested_questions.each do |question| %>
  <%= question.user.name %>
  <%= question.content %>
<% end %>