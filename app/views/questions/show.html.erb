<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1>質問詳細</h1>
    <%= render @question %>
    <% if logged_in? %>
      <h2>質問に回答する</h2>
      <%= render "answers/form" %>
    <% end %>
    <h2>回答一覧</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col">
        <%= render @answers %>
      </div>
    </div>
  </div>
</div>
