<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1>質問詳細</h1>
    <div class="card">
      <div class="card-header">
        <%= link_to @question.user.name, @question.user %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= @question.title %></h5>
        <p class="card-text"><%= simple_format(@question.content) %></p>
        <%= link_to @question.category.name, category_path(@question.category), class: "badge bg-secondary" %>
        <% if logged_in? %>
          <div id="interest_button">
            <% if @question.interested_by(current_user).present? %>
              <%= link_to question_interest_path(@question.id, @question.interested_by(current_user)), data: { turbo_method: :delete } do %>
                <i class="bi bi-bookmark-plus-fill" style="font-size: 1.5rem; color: limegreen;"></i>
              <% end %>
            <% else %>
              <%= render partial: "interests/interest" %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <%= time_ago_in_words(@question.created_at).upcase + "前" %>
      </div>
    </div>
    <% if logged_in? %>
      <h2>質問に回答する</h2>
      <%= render "answers/form" %>
    <% end %>
    <h2>回答一覧</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col">
        <%= render @answers %>
      </div>
    </div>
  </div>
</div>
